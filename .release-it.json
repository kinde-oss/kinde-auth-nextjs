{
  "git": {
    "requireBranch": "release/1.x",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": ["git pull", "npm run lint"],
    "after:bump": "npx auto-changelog -p && npm run build"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "tag": "vone"
  }
}
